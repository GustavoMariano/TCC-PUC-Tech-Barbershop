@{
    ViewData["Title"] = "Agendar Atendimento";
}
<h2 class="text-center">Agendar Atendimento</h2>
<br />
<br />
<form action="/action_page.php">
    <div class="row">
        <div class="col">
            <label for="exampleInputDate">Data</label>
            <input type="date" class="form-control" id="AppointmentCalendar">
        </div>

        <div class="col">
            <label for="exampleInputBarber">Babeiro</label>
            <button class="form-control btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle='dropdown' aria-haspopup="true" aria-expanded="false">
                Selecione o barbeiro
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Baber 1 name</a>
                <a class="dropdown-item" href="#">Baber 2 name</a>
                <a class="dropdown-item" href="#">Baber 3 name</a>
            </div>

        </div>
    </div>

    <br />
    <hr />
    <br />

    <div id="divSchedules">
        <h3 class="text-center">Horários disponíveis</h3>
        <br />
        <br />

        <div class="row">
            <div class="col">
                <h4>Manhã</h4>
            </div>
            <div class="col">
                <h4>Tarde</h4>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="8:00" value="8:00">
                <label class="form-check-label" for="flexRadioDefault1">
                    8:00h
                </label>

                <input class="form-check-input" type="radio" name="flexRadioDefault" id="9:00h" value="9:00">
                <label class="form-check-label" for="flexRadioDefault1">
                    9:00h
                </label>

                <input class="form-check-input" type="radio" name="flexRadioDefault" id="10:00h" value="10:00">
                <label class="form-check-label" for="flexRadioDefault1">
                    10:00h
                </label>

                <input class="form-check-input" type="radio" name="flexRadioDefault" id="11:00h" value="11:00">
                <label class="form-check-label" for="flexRadioDefault1">
                    11:00h
                </label>

            </div>

            <div class="col">
                <fieldset>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="13:00h" value="13:00">
                    <label class="form-check-label" for="flexRadioDefault1">
                        13:00h
                    </label>

                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="14:00h" value="14:00">
                    <label class="form-check-label" for="flexRadioDefault1">
                        14:00h
                    </label>

                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="15:00h" value="15:00">
                    <label class="form-check-label" for="flexRadioDefault1">
                        15:00h
                    </label>

                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="16:00" value="16:00">
                    <label class="form-check-label" for="flexRadioDefault1">
                        16:00h
                    </label>

                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="17:00" value="17:00">
                    <label class="form-check-label" for="flexRadioDefault1">
                        17:00h
                    </label>
                </fieldset>
            </div>
        </div>
    </div>

    @*Exemplo para continuar o desenvolvimento*@
    <input type="radio" name="main-categories" id="_1234" value="1234">

    <br />
    <br />

    <div class="text-center">
        <div class="signUp-Submit">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="SignUpSubtmit"><button class="btn btn-success">Agendar</button></a>
        </div>
    </div>
</form>

<script>
    divSchedules.style.visibility = 'hidden';
    document.getElementById("AppointmentCalendar").onchange = function () { myFunction() };

    function myFunction() {
        divSchedules.style.visibility = 'visible';
        $("#_1234").prop("checked", true);
    }
</script>