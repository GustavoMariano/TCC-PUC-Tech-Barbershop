@{
    ViewData["Title"] = "Cancelar Atendimento";
}

<div class="modal fade" tabindex="-1" role="dialog" id="cancelarAtendimentoModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Atendimento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja mesmo cancelar o atendimento?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="confirmarCancelamento">Confirmar Cancelamento</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var atendimentoId;

        $(".btn-danger").click(function () {
            atendimentoId = $(this).data("atendimento-id");
        });

        $("#confirmarCancelamento").click(function () {
            $.ajax({
                url: "/Atendimento/CancelarAtendimento",
                method: "POST",
                data: { atendimentoId: atendimentoId },
                success: function () {
                    location.reload();
                },
                error: function () {
                }
            });
        });
    });
</script>