<div class="row">
    @if (Model.Usuarios != null)
    {
        foreach (var usuario in Model.Usuarios)
        {
            <div class="col-md-3">
                <div class="card-group mb-3">
                    <div class="card">
                        @if (usuario.Imagem != null && usuario.Imagem.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(usuario.Imagem)" alt="Card image cap" id="imagemUsuario" style="max-width: 610px; max-height: 610px;">
                        }
                        else
                        {
                            <img class="card-img-top" src="..." alt="Card image cap">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@usuario.Informacoes.Nome</h5>
                            <p class="card-text">@usuario.Informacoes.Descricao</p>
                            <p class="card-text"><small class="text-muted">@usuario.Endereco.Bairro</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <h2>Ainda não temos barbeiros cadastrados.</h2>
        </div>
    }
</div>
