@{
    ViewData["Title"] = "Deletar Perfil";
}

<div class="modal fade" tabindex="-1" role="dialog" id="deletarPerfilModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deletar Perfil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja mesmo deletar o seu perfil?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="confirmarDeletamento">Deletar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#confirmarDeletamento").click(function () {
            $.ajax({
                url: "/Usuario/Deletar",
                method: "POST",
                success: function () {
                    location.reload();
                },
                error: function () {
                }
            });
        });
    });
</script>